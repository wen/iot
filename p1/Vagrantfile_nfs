# -*- mode: ruby -*-
# vi: set ft=ruby :

CPUS = 4
MEMORY = 4096
BOX = "centos/7"
MASTER = "amalsagoS"
WORKER = "amalsagoSW"
IP_MASTER = "192.168.42.110"
IP_WORKER = "192.168.42.111"

master_script = <<-SHELL
    curl -sfL https://get.k3s.io \
      | \
        sh -s - \
          server \
            --write-kubeconfig-mode=644 \
            --flannel-iface=eth1
    cp /var/lib/rancher/k3s/server/token /vagrant/token
    SHELL

worker_script = <<-SHELL
    curl -sfL https://get.k3s.io \
      | \
        sh -s - \
          agent \
            --server=https://#{IP_MASTER}:6443 \
            --token-file=/vagrant/token \
            --flannel-iface=eth1
    SHELL

Vagrant.configure("2") do | config |
  config.vm.box = BOX
  # Synced folder between host and the guest machine
  config.vm.synced_folder ".", "/vagrant", type: "nfs"
  config.vm.provider "virtualbox" do | vb |
    vb.cpus = CPUS
    vb.memory = MEMORY
    # Enable NAT hosts DNS resolver
    vb.customize ["modifyvm", :id, "--natdnsproxy1", "on"]
    vb.customize ["modifyvm", :id, "--natdnshostresolver1", "on"]
    # Reduce the time sync threshold
    vb.customize [ "guestproperty", "set", :id, "/VirtualBox/GuestAdd/VBoxService/--timesync-set-threshold", 10000 ]
  end
  config.vm.define MASTER do | master |
    master.vm.hostname = MASTER
    master.vm.network "private_network", ip: IP_MASTER, hostname: true
    master.vm.provision "shell", inline: master_script
  end
  config.vm.define WORKER do | worker |
    worker.vm.hostname = WORKER
    worker.vm.network "private_network", ip: IP_WORKER, hostname: true
    worker.vm.provision "shell", inline: worker_script
  end
end
